<div class="post-show-heading post-heading <%= if @post.is_nsfw do "nsfw" end %>">
	<h1 class="post-title"><%= @post.title %></h1>
	<div class="post-date">
		<%= datetime_to_display_date(Artour.Post.date_created(@post)) %>
	</div>
</div>
<div class="post-body-container">
	<%= to_paragraphs(@post.body) %>
</div>
<%= render "album.html", conn: @conn, post_images: @post_images %>
<%= render "post_meta_info.html", conn: @conn, post: @post %>